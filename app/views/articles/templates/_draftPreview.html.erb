<div id="draft<%= d.id %>" class="hidden draftPreview px-4 py-8">
    <div class="mb-4 text-4xl font-bold">
        <%= d.title %>
    </div>
    <div class="mb-4">
        <% TagArticle.where(article_id: d.id).each do |t| %>
            <span class="text-sm bg-gray-200 px-2 py-1 mr-1"><%= Tag.find(t.tag_id).name %></span>
        <% end %>
    </div>
    <div class="showArticle">
        <%= d.body %>
    </div>
</div>