<%= render "layouts/header" %>
<%= @article.title %>
<div id="preview">
    <%= @article.body %>
</div>

<script>
$(()=>{
    marked.setOptions({
        breaks: true,
        langPrefix: '',
        highlight: function (code, lang) {
        return hljs.highlightAuto(code, [lang]).value
        }
    })
    $('#preview').html(marked($('#preview').html()))
})
</script>